{
    "name": "itsdamien/laravel-api-controller",
    "description": "Simplified API controller, inspired by Jeffrey Way. Compatible with Laravel 5+ and Lumen 5+.",
    "keywords": [
        "laravel",
        "lumen",
        "api controller",
        "api"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Damien Criado",
            "email": "damien@itsdamien.com"
        }
    ],
    "require": {
        "php": ">=5.6.4",
        "illuminate/http": "~5.0",
        "illuminate/routing": "~5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "ItsDamien\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ItsDamien\\Api\\Tests\\": "tests/"
        }
    }
}
